<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.onlineexam.controller.WelcomeController" alignment="CENTER" spacing="20"
      stylesheets="@/styles/style.css">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40"/>
    </padding>
    <Label text="Online Exam System" styleClass="title-label"/>
    <Label text="Welcome! Please login or register to continue." styleClass="subtitle-label"/>
    <VBox alignment="CENTER" spacing="15">
        <Button text="Login" onAction="#goToLogin" styleClass="primary-button" prefWidth="200"/>
        <Button text="Register" onAction="#goToRegister" styleClass="secondary-button" prefWidth="200"/>
    </VBox>
</VBox>
