<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.onlineexam.controller.TeacherDashboardController"
            prefWidth="900" prefHeight="600" stylesheets="@/styles/style.css">

    <left>
        <VBox styleClass="sidebar" prefWidth="180" spacing="5">
            <padding><Insets top="20" right="10" bottom="20" left="10"/></padding>

            <!-- ✅ Teacher treated as Admin -->
            <Label text="Admin Portal" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <Separator style="-fx-background-color: #34495e;"/>

            <Button text="Dashboard" onAction="#goToDashboard" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Create Exam" onAction="#goToCreateExam" styleClass="sidebar-button" maxWidth="Infinity"/>

            <!-- ✅ We'll use ExamList (admin-style) -->
            <Button text="Manage Exams" onAction="#goToMyExams" styleClass="sidebar-button" maxWidth="Infinity"/>

            <Button text="Results &amp; Reports" onAction="#goToResults" styleClass="sidebar-button" maxWidth="Infinity"/>

            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Logout" onAction="#logout" styleClass="sidebar-button" maxWidth="Infinity"/>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_LEFT" spacing="18">
            <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

            <Label fx:id="welcomeLabel" text="Welcome!" styleClass="form-title"/>
            <Label text="Overview of the system (Teacher = Admin)" style="-fx-text-fill: #7f8c8d;"/>

            <!-- ✅ Stats Cards -->
            <HBox spacing="15">
                <VBox styleClass="card" prefWidth="220" spacing="6">
                    <Label text="Total Exams" style="-fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="totalExamsLabel" text="0" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox styleClass="card" prefWidth="220" spacing="6">
                    <Label text="Total Students" style="-fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="totalStudentsLabel" text="0" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox styleClass="card" prefWidth="220" spacing="6">
                    <Label text="Total Results" style="-fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="totalResultsLabel" text="0" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>

            <!-- ✅ Quick Actions -->
            <HBox spacing="10">
                <Button text="Create Exam" onAction="#goToCreateExam" styleClass="primary-button"/>
                <Button text="Manage Exams" onAction="#goToMyExams" styleClass="secondary-button"/>
                <Button text="View Results" onAction="#goToResults" styleClass="secondary-button"/>
            </HBox>

            <Label text="Tip: Publish exams using Toggle (ACTIVE/DRAFT) from Manage Exams."
                   style="-fx-text-fill: #7f8c8d;"/>
        </VBox>
    </center>

</BorderPane>
