<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.onlineexam.controller.TeacherQuestionListController">

    <top>
        <HBox spacing="10" padding="15">
            <Button text="â† Exams" onAction="#back"/>
            <Label fx:id="headerLabel" text="Questions" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Add Question" onAction="#addQuestion"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" padding="15">
            <TableView fx:id="table" prefHeight="520">
                <columns>
                    <TableColumn fx:id="colOrder" text="#" prefWidth="50"/>
                    <TableColumn fx:id="colText" text="Question" prefWidth="520"/>
                    <TableColumn fx:id="colCorrect" text="Correct" prefWidth="90"/>
                    <TableColumn fx:id="colMarks" text="Marks" prefWidth="80"/>
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="180"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
