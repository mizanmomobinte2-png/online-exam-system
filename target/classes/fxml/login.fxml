<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.onlineexam.controller.LoginController" prefWidth="500" prefHeight="450"
            stylesheets="@/styles/style.css">
    <center>
        <VBox alignment="CENTER" spacing="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30" left="40" right="40" top="30"/>
            </padding>
            <Label text="Login" styleClass="form-title"/>
            <TextField fx:id="usernameField" promptText="Username or Email" prefWidth="300"/>
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300"/>
            <Label fx:id="errorLabel" styleClass="error-label" visible="false" managed="false"/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="Login" onAction="#handleLogin" styleClass="primary-button" defaultButton="true"/>
                <Button text="Back" onAction="#goBack" styleClass="secondary-button"/>
            </HBox>
            <Hyperlink text="Don't have an account? Register" onAction="#goToRegister"/>
        </VBox>
    </center>
</BorderPane>
