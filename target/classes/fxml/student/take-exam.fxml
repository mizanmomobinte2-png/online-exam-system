<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.onlineexam.controller.TakeExamController"
            prefWidth="1000" prefHeight="700" stylesheets="@/styles/style.css">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label fx:id="timerLabel" text="Time: 60:00" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Submit Exam" onAction="#submitExam" styleClass="primary-button"/>
        </HBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.75">
            <VBox fx:id="questionPanel" spacing="15">
                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                <Label fx:id="questionNumberLabel" text="Question 1" style="-fx-font-weight: bold;"/>
                <Label fx:id="questionTextLabel" wrapText="true" style="-fx-font-size: 14px;"/>
                <VBox fx:id="optionsBox" spacing="10"/>
                <HBox spacing="10">
                    <Button text="Previous" onAction="#previousQuestion" styleClass="secondary-button"/>
                    <Button text="Save &amp; Next" onAction="#nextQuestion" styleClass="primary-button"/>
                </HBox>
            </VBox>
            <VBox fx:id="paletteBox" spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 15;">
                <Label text="Question Palette" style="-fx-font-weight: bold;"/>
                <FlowPane fx:id="paletteFlow" hgap="5" vgap="5" prefWidth="200"/>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
