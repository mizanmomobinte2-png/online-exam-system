<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.onlineexam.controller.ExamInstructionsController"
      spacing="20" prefWidth="600" stylesheets="@/styles/style.css">
    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>
    <Label fx:id="examTitleLabel" text="Exam Instructions" styleClass="form-title"/>
    <Label fx:id="detailsLabel" text="Duration: X min | Questions: Y | Marks: Z" wrapText="true"/>
    <Label text="Instructions:" style="-fx-font-weight: bold;"/>
    <TextArea fx:id="instructionsArea" editable="false" wrapText="true" prefRowCount="8" prefWidth="540"/>
    <CheckBox fx:id="acceptCheckbox" text="I have read and accept the instructions"/>
    <HBox spacing="10">
        <Button fx:id="startButton" text="Start Exam" onAction="#startExam" styleClass="primary-button" disable="true"/>
        <Button text="Cancel" onAction="#cancel" styleClass="secondary-button"/>
    </HBox>
</VBox>
